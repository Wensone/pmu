<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        // Анимация длится 5 сек
        // Старт анимации в 0
        // Финиш анимации в 1
    -->
    <alpha
        android:duration="5000"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
</set>